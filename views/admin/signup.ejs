<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="p-5 mt-5 border rounded shadow-lg signup col-6 offset-3">
    <h1 class="">Admin SignUp</h1>
    <form action="/signup" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input
          type="email"
          required
          class="form-control"
          id="email"
          name="admin[email]"
          placeholder="name@example.com"
        />
        <div class="invalid-feedback">Please Enter email</div>
      </div>
      <div>
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          required
          id="password"
          name="admin[pass]"
          class="form-control"
          aria-describedby="passwordHelpBlock"
        />
        <div id="passwordHelpBlock" class="form-text">
          Your password must be 8-20 characters long, contain letters and
          numbers, and must not contain spaces, special characters, or emoji.
        </div>
        <div class="invalid-feedback">Please enter a password</div>
      </div>

      <button type="submit" class="mt-3 col-12 btn btn-primary">Signup</button>
    </form>
  </div>
</div>
