<% layout("/layouts/boilerplate.ejs") %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="border-0 shadow-lg card">
        <div class="py-3 text-white card-header bg-primary">
          <div class="d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
              <i class="bi bi-box-seam me-2"></i>Add New Product
            </h3>
            <span class="badge bg-light text-primary fs-6"
              >Inventory ID: <%= id %></span
            >
          </div>
        </div>

        <div class="p-4 card-body">
          <form
            method="POST"
            action="/products"
            novalidate
            class="needs-validation"
          >
            <!-- Basic Information Section -->
            <div class="mb-4">
              <h5 class="pb-2 mb-3 text-primary border-bottom">
                <i class="bi bi-info-circle me-2"></i>Basic Information
              </h5>
              <div class="row g-3">
                <div class="col-md-6">
                  <label for="name" class="form-label">Product Name*</label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="products[name]"
                    placeholder="Enter product name"
                    required
                  />
                  <div class="invalid-feedback">
                    Please provide a product name.
                  </div>
                </div>
                <div class="col-md-6">
                  <label for="sku" class="form-label">SKU Code</label>
                  <input
                    type="text"
                    class="form-control"
                    id="sku"
                    value="<%=id%>"
                    name="products[num]"
                    placeholder="PROD-XXXXXX"
                  />
                </div>
                <div class="col-md-12">
                  <label for="description" class="form-label"
                    >Description</label
                  >
                  <textarea
                    class="form-control"
                    id="description"
                    name="products[description]"
                    rows="2"
                    placeholder="Product description..."
                  ></textarea>
                </div>
              </div>
            </div>

            <!-- Pricing & Inventory Section -->
            <div class="mb-4">
              <h5 class="pb-2 mb-3 text-primary border-bottom">
                <i class="bi bi-cash-coin me-2"></i>Pricing & Inventory
              </h5>
              <div class="row g-3">
                <div class="col-md-4">
                  <label for="price" class="form-label">Price *</label>
                  <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input
                      type="number"
                      class="form-control"
                      id="price"
                      name="products[price]"
                      step="0.01"
                      min="0"
                      required
                    />
                  </div>
                  <div class="invalid-feedback">
                    Please provide a valid price.
                  </div>
                </div>
                <div class="col-md-4">
                  <label for="cost" class="form-label">Cost Price</label>
                  <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input
                      type="number"
                      class="form-control"
                      id="cost"
                      name="products[costPrice]"
                      step="0.01"
                      min="0"
                    />
                  </div>
                </div>
                <div class="col-md-4">
                  <label for="qty" class="form-label">Quantity *</label>
                  <input
                    type="number"
                    class="form-control"
                    id="qty"
                    name="products[qty]"
                    min="0"
                    required
                  />
                  <div class="invalid-feedback">
                    Please provide a valid quantity.
                  </div>
                </div>
                <div class="col-md-4">
                  <label for="minStock" class="form-label"
                    >Min Stock Level</label
                  >
                  <input
                    type="number"
                    class="form-control"
                    id="minStock"
                    name="products[minStock]"
                    min="0"
                  />
                </div>
                <div class="col-md-4">
                  <label for="weight" class="form-label">Weight (kg)</label>
                  <input
                    type="number"
                    class="form-control"
                    id="weight"
                    name="products[weight]"
                    step="0.01"
                    min="0"
                  />
                </div>
                <div class="col-md-4">
                  <label for="barcode" class="form-label">Barcode</label>
                  <input
                    type="text"
                    class="form-control"
                    id="barcode"
                    name="products[barcode]"
                    placeholder="Scan or enter barcode"
                  />
                </div>
              </div>
            </div>

            <!-- Supplier & Category Section -->
            <div class="mb-4">
              <h5 class="pb-2 mb-3 text-primary border-bottom">
                <i class="bi bi-tags me-2"></i>Classification
              </h5>
              <div class="row g-3">
                <div class="col-md-6">
                  <label for="supName" class="form-label"
                    >Supplier Name *</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="supName"
                    name="products[supName]"
                    required
                  />
                  <div class="invalid-feedback">
                    Please provide a supplier name.
                  </div>
                </div>
                <div class="col-md-6">
                  <label for="supCode" class="form-label">Supplier Code</label>
                  <input
                    type="text"
                    class="form-control"
                    id="supCode"
                    name="products[supCode]"
                  />
                </div>
              </div>
            </div>

            <!-- Additional Information Section -->
            <div class="mb-4">
              <h5 class="pb-2 mb-3 text-primary border-bottom">
                <i class="bi bi-file-earmark-text me-2"></i>Additional
                Information
              </h5>
              <div class="row g-3">
                <div class="col-md-4">
                  <label for="date" class="form-label">Date Added*</label>
                  <input
                    type="date"
                    class="form-control"
                    id="date"
                    name="products[dateAdded]"
                    required
                    onfocus="this.value = new Date().toLocaleDateString('en-CA');"
                  />
                </div>
                <div class="col-md-4">
                  <label for="expiry" class="form-label">Expiry Date</label>
                  <input
                    type="date"
                    class="form-control"
                    id="expiry"
                    name="products[dateExpiry]"
                  />
                </div>
                <div class="col-md-4">
                  <label for="condition" class="form-label">Condition</label>
                  <select
                    class="form-select"
                    id="condition"
                    name="products[condition]"
                  >
                    <option value="New" selected>New</option>
                    <option value="Refurbished">Refurbished</option>
                    <option value="Used">Used</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="location" class="form-label"
                    >Warehouse Location</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="location"
                    name="products[location]"
                    placeholder="Aisle-Shelf-Bin"
                  />
                </div>
                <div class="col-md-6">
                  <label for="tags" class="form-label">Tags</label>
                  <input
                    type="text"
                    class="form-control"
                    id="tags"
                    name="products[tags]"
                    placeholder="Separate tags with commas"
                  />
                </div>
                <div class="col-md-12">
                  <label for="notes" class="form-label">Internal Notes</label>
                  <textarea
                    class="form-control"
                    id="notes"
                    name="products[notes]"
                    rows="2"
                  ></textarea>
                </div>
              </div>
            </div>

            <!-- Image Upload Section -->
            <div class="mb-4">
              <h5 class="pb-2 mb-3 text-primary border-bottom">
                <i class="bi bi-image me-2"></i>Product Images
              </h5>
              <div class="row g-3">
                <div class="col-md-12">
                  <label for="image" class="form-label">Upload Images</label>
                  <input
                    class="form-control"
                    type="file"
                    id="image"
                    name="products[image]"
                    multiple
                    accept="image/*"
                  />
                  <div class="form-text">
                    Upload product images (max 5 images, 2MB each)
                  </div>
                </div>
              </div>
            </div>

            <!-- Form Actions -->
            <div class="mt-4 d-flex justify-content-between">
              <button type="reset" class="px-4 btn btn-outline-secondary">
                <i class="bi bi-arrow-counterclockwise me-2"></i>Reset
              </button>
              <button type="submit" class="px-4 btn btn-primary">
                <i class="bi bi-save me-2"></i>Save Product
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
