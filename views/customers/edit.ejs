<% layout("/layouts/boilerplate.ejs")%>
<div class="py-4 ">
  <div class="border-0 shadow-lg card" style="max-width: 800px; margin: 0 auto;">
    <div class="py-3 text-white card-header bg-primary">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Dairy Customer</h3>
        <span class="badge bg-light text-primary">Customer ID: <%= customer.num %></span>
      </div>
    </div>
    
    <div class="p-4 card-body">
      <form method="POST" action="/customers/<%= customer._id %>?_method=PUT" novalidate class="needs-validation">
        <div class="row g-3">
          <!-- Customer Basic Info -->
          <div class="col-md-6">
            <div class="mb-3">
              <label for="num" class="form-label fw-bold">Customer ID *</label>
              <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-123 text-primary"></i></span>
                <input
                  type="number"
                  class="form-control"
                  id="num"
                  name="customer[num]"
                  value="<%= customer.num %>"
                  required
                  readonly
                />
              </div>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="mb-3">
              <label for="name" class="form-label fw-bold">Full Name *</label>
              <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-person text-primary"></i></span>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="customer[name]"
                  value="<%= customer.name %>"
                  required
                  placeholder="e.g. Rajesh Kumar"
                />
              </div>
              <div class="invalid-feedback">Please enter customer name</div>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="mb-3">
              <label for="phNo" class="form-label">Mobile Number *</label>
              <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-phone text-primary"></i></span>
                <input
                  type="tel"
                  class="form-control"
                  id="phNo"
                  name="customer[phNo]"
                  value="<%= customer.phNo %>"
                  required
                  pattern="[0-9]{10}"
                  placeholder="e.g. 9876543210"
                />
              </div>
              <div class="invalid-feedback">Please enter 10-digit mobile number</div>
            </div>
          </div>
          
          <div class="col-12">
            <div class="mb-3">
              <label for="address" class="form-label">Delivery Address*</label>
              <div class="input-group">
                <span class="input-group-text bg-light align-items-start"><i class="mt-1 bi bi-geo-alt text-primary"></i></span>
                <textarea
                  class="form-control"
                  id="address"
                  name="customer[address]"
                  required
                  rows="2"
                  placeholder="House no, Street, Area, City"
                ><%= customer.address %></textarea>
              </div>
              <div class="invalid-feedback">Please enter delivery address</div>
            </div>
          </div>
          
          <!-- Milk Details -->
          <div class="col-md-6">
            <div class="mb-3">
              <label for="milkType" class="form-label fw-bold">Milk Type*</label>
              <select class="form-select" id="milkType" name="customer[milkType]" required>
                <option value="" disabled>Select milk type</option>
                <option value="cow" <%= customer.milkType === 'cow' ? 'selected' : '' %>>Cow Milk</option>
                <option value="buffalo" <%= customer.milkType === 'buffalo' ? 'selected' : '' %>>Buffalo Milk</option>
                <option value="skimmed" <%= customer.milkType === 'skimmed' ? 'selected' : '' %>>Skimmed Milk</option>
                <option value="toned" <%= customer.milkType === 'toned' ? 'selected' : '' %>>Toned Milk</option>
                <option value="custom" <%= !['cow','buffalo','skimmed','toned'].includes(customer.milkType) ? 'selected' : '' %>>Custom Milk</option>
              </select>
              <div class="invalid-feedback">Please select milk type</div>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label">Customer Since</label>
              <div class="input-group">
                <span class="input-group-text bg-light"><i class="bi bi-calendar text-primary"></i></span>
                <input
                  type="text"
                  class="form-control bg-light"
                  value="<%= new Date(customer.joinDate).toLocaleDateString('en-GB') %>"
                  readonly
                />
              </div>
            </div>
          </div>
        
        <div class="pt-4 d-flex justify-content-between border-top">
          <a href="/customers" class="px-4 btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Cancel
          </a>
          <button type="submit" class="px-4 btn btn-primary">
            <i class="bi bi-save me-2"></i>Update Customer
          </button>
        </div>
      </form>
    </div>
  </div>
</div>